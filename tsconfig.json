{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "target": "ESNext",
        "types": ["jquery", "svelte"],
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}